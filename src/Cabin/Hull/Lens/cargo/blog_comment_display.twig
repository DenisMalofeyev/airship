{# This is displayed for each and every comment#}
<div class="blog-comment-display">
    <div class="blog-comment-meta">
        {% if data.authorname %}
            <a href="/blog/author/{{ data.authorslug|e('url') }}">{{ data.authorname|e('html') }}</a>
        {% elseif data.metadata %}
            {% if data.metadata.url %}
                <a href="{{ data.metadata.url|e('html_attr') }}">{{ data.metadata.name|e('html') }}</a>
            {% else %}
                {{ data.metadata.name|e('html') }}
            {% endif %}
        {% endif %}
        <time id="comment-{{ data.commentid }}" datetime="{{ data.created }}">{{ data.created|date('M j, Y H:i A') }}</time>
        <a class="comment-link" href="#comment-{{ data.commentid }}"><i class="fa fa-link"></i> Link</a>
        <a class="reply-link" data-replyto="{{ data.commentid }}"><i class="fa fa-comment"></i> {{ __("Reply") }}</a>
    </div>
    <div class="blog-comment-table">
    {% if data.author %}
        <div class="table-cell table-min-width">
            <img src="{{ get_avatar(data.author, 'comment') }}" alt="{{ data.authorname|e('html_attr') }}" title="{{ data.authorname|e('html_attr') }}" class="blog-comment-avatar" />
        </div>
    {% elseif data.metadata.email %}
        <div class="table-cell table-min-width">
            <img src="{{ data.metadata.email|gravatar }}" alt="{{ data.metadata.name|e('html_attr') }}" title="{{ data.metadata.name|e('html_attr') }}" class="blog-comment-avatar" />
        </div>
    {% endif %}
        <div class="table-cell">
            <div class="blog-comment-body">{{ data.message|default("")|CleanMarkdown }}</div>
        </div>
    </div>
</div>