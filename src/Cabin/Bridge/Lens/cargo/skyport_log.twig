<h2>{{ __("Extension Log") }}</h2>
<p>
    {{ __("This mostly consists of messages generated by the auto-updater.") }}
</p>
{% if logged %}
<table id="update-log" class="full-width">
    <thead>
    <tr>
        <th>{{ __("Component") }}</th>
        <th>{{ __("Date / Time") }}</th>
        <th>{{ __("Message") }}</th>
        <th>{{ __("Supplier") }}</th>
        <th>{{ __("Package") }}</th>
        <th>{{ __("Version") }}</th>
    </tr>
    </thead>

    {% for log in logged %}
    <tr class="table-row log-{{ log.loglevel|e('html_attr') }}">
        <td class="table-cell">
            {{ log.component|ucfirst }}
        </td>
        <td class="table-cell">
            {{ log.created|date('F j, Y g:i:s A') }}
        </td>
        <td class="table-cell">
            {{ log.message }}
        </td>
        <td class="table-cell">
            {{ log.context['supplier'] }}
        </td>
        <td class="table-cell">
            {{ log.context['name'] }}
        </td>
        <td class="table-cell">
            {% if log.context.action == "UPDATE" %}
                {{ log.context['updateInfo']['version'] }}
            {% elseif log.context.action == "INSTALL" %}
                {{ log.context['installFile']['version'] }}
            {% endif %}
        </td>
    </tr>
    <tr>
        <td colspan="6">
            <textarea title="details" class="readonly log-textarea" readonly="readonly">{#
                #}{{ log.context|json_encode(constant("JSON_PRETTY_PRINT")) }}{#
            #}</textarea>
        </td>
    </tr>
    {% endfor %}
</table>
{% else %}
    <p>{{ __("No messages.") }}</p>
{% endif %}