<h2 class="bottom-pad">{{ __("User Accounts") }}</h2>
<div id="bridge_crew_users_list">
    <div class="table full-width">
        <div class="table-row table-header">
            <div class="table-cell table-2-btn-left">
                {{ __("Actions") }}
            </div>
            <div class="table-cell">
                {{ __("Display Name") }}
            </div>
            <div class="table-cell">
                {{ __("Username") }}
            </div>
            <div class="table-cell">
                {{ __("Unique ID") }}
            </div>
            <div class="table-cell">
                {{ __("Created") }}
            </div>
            <div class="table-cell">
                {{ __("Modified") }}
            </div>
        </div>
        {% for u in users %}
            <div class="table-row">
                <div class="table-cell table-2-btn-left">
                    <a{#
                        #} class="pure-button pure-button-secondary"{#
                        #} href="{{ cabin_url() }}crew/users/edit/{{ u.userid|e('html_attr') }}"{#
                        #} title="{{ __("View/Edit User")|e('html_attr') }}"{#
                    #}>
                        <i class="fa fa-pencil"></i>
                    </a>{#
                    #}<a{#
                        #} class="pure-button pure-button-primary"{#
                        #} href="{{ cabin_url() }}file_manager/Hull?dir=user/{{ u.uniqueid|e('url') }}"{#
                        #} title="{{ __("User's Files")|e('html_attr') }}"{#
                    #}>
                        <i class="fa fa-file-photo-o"></i>
                    </a>
                </div>
                <div class="table-cell monospace">
                    {{
                        (
                            u.display_name|e('html_attr')
                        )|default('&mdash;')|raw
                    }}
                </div>
                <div class="table-cell monospace">
                    {{ u.username|e('html_attr') }}
                </div>
                <div class="table-cell monospace">
                    {{ u.uniqueid|e('html_attr') }}
                </div>
                <div class="table-cell monospace">
                    {{ u.created|date('Y-m-d g:i:s A') }}
                </div>
                <div class="table-cell monospace">
                    {{ u.modified|date('Y-m-d g:i:s A') }}
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<div id="bridge_blog_pagination">
    {% include cargo("bridge_blog_pagination") %}
</div>